<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <title>@ViewData["Title"] - Ahsan Naveed </title>
    <style>
        
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="#">Ahsan Naveed</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav" >
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="/" >Home</a>
                    </li>
                   
                    
                   
                   @if(User.Identity.IsAuthenticated)
                   {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="contact">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="contactdata">Contact Data</a>
                        </li>
                     <li class="nav-item">
                        <a class="nav-link" asp-controller="Home"  asp-action="project">Projects</a>
                    </li> 
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="about">About</a>
                    </li>
                    <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="auth" asp-action="Logout">Logout</a>
                    </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="auth" asp-action="Register">Register</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="auth" asp-action="login">Login</a>
                        </li>



                    }
                    
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <footer class="bg-dark text-white text-center py-3">
        <div class="container">
            <p>&copy; 2024 Software Engineer Portfolio</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
